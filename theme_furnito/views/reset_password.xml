<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="reset_password" inherit_id="auth_signup.reset_password" name="Reset Password">
    <xpath expr="//form[@class='oe_reset_password_form']" position="attributes">
      <attribute name="style">background-color:white;max-width:600px;</attribute>
    </xpath>
    <xpath expr="//div[@class='form-group field-login']" position="replace">
      <div class="form-group field-login">
        <label for="login" class="control-label col-sm-4 col-md-4 col-xs-4">Usernames<span style="color:red">*</span></label>
        <div class=" col-sm-8 col-md-8 col-xs-8">
          <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus" required="required" autocapitalize="off"/>
        </div>
      </div>
      <hr/>
    </xpath>
  </template>
</odoo>